<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dormi_logo"
    android:padding="24dp"
    android:backgroundTint="#F8F9FA"
    android:backgroundTintMode="screen"
    tools:context=".ContactsActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/contactTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="צור קשר / Contact"
        android:textColor="#2F5DA9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Office Details Header -->
    <TextView
        android:id="@+id/officeHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="פרטי משרד המעונות / Dorms Office Info:"
        android:textColor="#11206F"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/contactTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Operating Hours -->
    <TextView
        android:id="@+id/hoursText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="שעות פעילות: 9:30–12:30 / Hours: 9:30–12:30"
        android:textColor="#11206F"
        android:textSize="14sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/officeHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Phone -->
    <TextView
        android:id="@+id/phoneText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="טלפון: 054-1234567 / Phone"
        android:textColor="#11206F"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/hoursText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="דוא״ל: rifkin@technion.ac.il / Email"
        android:textColor="#11206F"
        android:textSize="14sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/phoneText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Return Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="חזרה / Return"
        android:textColor="@android:color/white"
        android:layout_marginTop="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        app:cornerRadius="20dp"
        app:backgroundTint="#2F5DA9"
        app:layout_constraintTop_toBottomOf="@id/emailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
